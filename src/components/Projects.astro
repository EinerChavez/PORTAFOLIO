<style>
	.projects-section {
		min-height: 95vh;
		padding: 60px 20px;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		width: 100%;
	}

	.section-title {
		font-size: 3rem;
		text-align: center;
		margin-bottom: 20px;
		background: linear-gradient(45deg, var(--accent-primary), var(--accent-secondary));
		background-clip: text;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		animation: glow-pulse 2s ease-in-out infinite alternate;
	}

	.section-subtitle {
		text-align: center;
		font-size: 1.2rem;
		color: var(--text-secondary);
		margin-bottom: 80px;
	}

	.projects-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 40px;
	}

	.project-card {
		background: var(--card-bg);
		backdrop-filter: blur(20px);
		border: 1px solid var(--border-color);
		border-radius: 20px;
		overflow: hidden;
		transition: all 0.5s ease;
		position: relative;
		animation: float-up 0.8s ease-out both;
	}

	.project-card[data-delay="200"] { animation-delay: 0.2s; }
	.project-card[data-delay="400"] { animation-delay: 0.4s; }
	.project-card[data-delay="600"] { animation-delay: 0.6s; }

	@keyframes float-up {
		0% {
			opacity: 0;
			transform: translateY(50px) scale(0.9);
		}
		100% {
			opacity: 1;
			transform: translateY(0) scale(1);
		}
	}

	.project-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(45deg, rgba(0, 245, 255, 0.15), rgba(255, 107, 157, 0.15));
		opacity: 0;
		transition: opacity 0.3s ease;
		z-index: 1;
	}

	.project-card:hover::before {
		opacity: 1;
	}

	.project-card:hover {
		transform: translateY(-20px) scale(1.05);
		box-shadow: 
			0 30px 60px rgba(0, 245, 255, 0.3),
			0 0 120px rgba(0, 245, 255, 0.2);
		border-color: rgba(0, 245, 255, 0.5);
		animation: card-hover-pulse 1s ease-in-out infinite;
	}

	@keyframes card-hover-pulse {
		0%, 100% { transform: translateY(-20px) scale(1.05); }
		50% { transform: translateY(-25px) scale(1.06); }
	}

	.project-image {
		position: relative;
		height: 220px;
		overflow: hidden;
	}

	.project-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.5s ease;
	}

	.project-card:hover .project-image img {
		transform: scale(1.15) rotate(1deg);
		filter: brightness(1.1) contrast(1.1);
	}

	.project-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, rgba(0, 245, 255, 0.3), rgba(255, 107, 157, 0.3));
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.project-card:hover .project-overlay {
		opacity: 1;
	}

	.project-particles {
		position: absolute;
		width: 100%;
		height: 100%;
		background: radial-gradient(2px 2px at 20% 30%, var(--accent-primary), transparent),
					radial-gradient(2px 2px at 60% 70%, var(--accent-secondary), transparent),
					radial-gradient(1px 1px at 90% 40%, var(--accent-primary), transparent),
					radial-gradient(1px 1px at 40% 80%, var(--accent-secondary), transparent);
		animation: sparkle-float 3s ease-in-out infinite, particle-dance 6s ease-in-out infinite;
	}

	@keyframes particle-dance {
		0%, 100% { opacity: 0.6; transform: translateY(0) rotate(0deg); }
		25% { opacity: 0.8; transform: translateY(-5px) rotate(90deg); }
		50% { opacity: 1; transform: translateY(-10px) rotate(180deg); }
		75% { opacity: 0.8; transform: translateY(-5px) rotate(270deg); }
	}

	@keyframes sparkle-float {
		0%, 100% { transform: translateY(0) rotate(0deg); }
		50% { transform: translateY(-10px) rotate(180deg); }
	}

	.project-content {
		padding: 30px;
		position: relative;
		z-index: 2;
	}

	.project-content h3 {
		font-size: 1.5rem;
		margin-bottom: 15px;
		font-family: 'Orbitron', monospace;
		background: linear-gradient(45deg, var(--accent-primary), var(--accent-secondary));
		background-clip: text;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.project-content p {
		color: var(--text-secondary);
		line-height: 1.6;
		margin-bottom: 20px;
	}

	.tech-stack {
		display: flex;
		flex-wrap: wrap;
		gap: 8px;
		margin-bottom: 25px;
	}

	.tech-tag {
		background: rgba(0, 245, 255, 0.2);
		color: var(--accent-primary);
		padding: 6px 12px;
		border-radius: 20px;
		font-size: 0.8rem;
		font-weight: 600;
		border: 1px solid var(--border-color);
		transition: all 0.3s ease;
	}

	.tech-tag:hover {
		background: rgba(0, 245, 255, 0.3);
		box-shadow: 0 0 20px rgba(0, 245, 255, 0.6);
		transform: scale(1.1) translateY(-2px);
		animation: tag-glow 0.6s ease-in-out;
	}

	@keyframes tag-glow {
		0%, 100% { box-shadow: 0 0 20px rgba(0, 245, 255, 0.6); }
		50% { box-shadow: 0 0 30px rgba(255, 107, 157, 0.8); }
	}

	.project-links {
		display: flex;
		justify-content: center;
		gap: 15px;
	}

	.project-btn {
		padding: 12px 30px;
		border-radius: 25px;
		text-decoration: none;
		font-weight: 600;
		font-family: 'Orbitron', monospace;
		transition: all 0.3s ease;
		position: relative;
		overflow: hidden;
		backdrop-filter: blur(10px);
		font-size: 0.9rem;
		min-width: 120px;
		text-align: center;
	}

	.project-btn.code {
		background: transparent;
		color: var(--text-primary);
		border: 2px solid var(--accent-primary);
	}

	.project-btn::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
		transition: left 0.5s ease;
	}

	.project-btn:hover::before {
		left: 100%;
	}

	.project-btn:hover {
		transform: translateY(-3px) scale(1.05);
		box-shadow: 0 12px 30px rgba(0, 245, 255, 0.5);
		animation: btn-hover-glow 0.8s ease-in-out infinite alternate;
	}

	@keyframes btn-hover-glow {
		0% { box-shadow: 0 12px 30px rgba(0, 245, 255, 0.5); }
		100% { box-shadow: 0 15px 40px rgba(255, 107, 157, 0.6); }
	}

	@media (max-width: 768px) {
		.projects-section {
			padding: 40px 15px;
		}

		.projects-grid {
			grid-template-columns: 1fr;
			gap: 25px;
		}

		.section-title {
			font-size: 2rem;
		}

		.section-subtitle {
			font-size: 1.1rem;
			margin-bottom: 60px;
		}

		.project-image {
			height: 200px;
		}

		.project-content {
			padding: 25px 20px;
		}

		.project-content h3 {
			font-size: 1.3rem;
		}

		.project-content p {
			font-size: 0.95rem;
			line-height: 1.5;
		}

		.project-links {
			justify-content: center;
			gap: 15px;
		}

		.project-btn {
			min-width: 140px;
			padding: 12px 25px;
			text-align: center;
		}
	}

	@media (max-width: 480px) {
		.projects-section {
			padding: 30px 10px;
		}

		.section-title {
			font-size: 1.8rem;
		}

		.project-image {
			height: 160px;
		}

		.project-content {
			padding: 20px 15px;
		}

		.project-content h3 {
			font-size: 1.2rem;
		}

		.project-content p {
			font-size: 0.9rem;
		}

		.tech-stack {
			gap: 6px;
		}

		.tech-tag {
			padding: 4px 8px;
			font-size: 0.7rem;
		}

		.project-links {
			justify-content: center;
		}

		.project-btn {
			padding: 12px 25px;
			font-size: 0.8rem;
			min-width: 130px;
		}
	}
</style>