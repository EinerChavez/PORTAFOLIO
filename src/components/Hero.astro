---
// Hero Section - Presentación Personal
---

<section id="inicio" class="hero-section">
	<div class="hero-content">
		<div class="profile-container">
			<div class="profile-image">
				<img src="https://res.cloudinary.com/drw6dkow5/image/upload/v1759528470/018a2204-6b48-417f-990c-109c9302f445_eudmwa.jpg" alt="Mi foto" />
				<div class="cosmic-ring"></div>
			</div>
		</div>
		
		<div class="hero-text">
			<h1 class="cosmic-title">
				<span class="typing-text-name"></span>
				<span class="cursor">|</span>
			</h1>
			<h2 class="cosmic-subtitle">
				<span class="typing-text-welcome"></span>
				<span class="cursor">|</span>
			</h2>
			<p class="hero-subtitle fade-in-up" data-es="Desarrollador Full Stack explorando las fronteras de la tecnología" data-en="Full Stack Developer exploring the frontiers of technology">
				Desarrollador Full Stack explorando las fronteras de la tecnología
			</p>
			<div class="cta-buttons fade-in-up">
				<a href="https://github.com/EinerChavez?tab=repositories" target="_blank" class="cosmic-button primary" data-es="Ver Proyectos" data-en="View Projects">Ver Proyectos</a>
				<a href="https://drive.google.com/file/d/10xav_irYyHQSPdendBQz04CIRB5zM0HR/view?usp=drive_link" target="_blank" class="cosmic-button secondary" data-es="Ver mi CV" data-en="View my CV">Ver mi CV</a>
			</div>
		</div>
	</div>
	
	<div class="scroll-indicator">
		<div class="scroll-arrow"></div>
		<span data-es="Explorar" data-en="Explore">Explorar</span>
	</div>
</section>

<style>
	.hero-section {
		min-height: 95vh;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		padding: 80px 20px 40px;
		position: relative;
	}

	.hero-content {
		display: flex;
		align-items: center;
		gap: 60px;
		max-width: 1200px;
		width: 100%;
	}

	.profile-container {
		position: relative;
		animation: float-in 1.5s ease-out, gentle-float 6s infinite ease-in-out 2s;
	}

	@keyframes gentle-float {
		0%, 100% { transform: translateY(0) rotate(0deg); }
		50% { transform: translateY(-10px) rotate(1deg); }
	}

	@keyframes float-in {
		0% {
			opacity: 0;
			transform: translateX(-50px) scale(0.8);
		}
		50% {
			opacity: 0.7;
			transform: translateX(-10px) scale(0.95);
		}
		100% {
			opacity: 1;
			transform: translateX(0) scale(1);
		}
	}

	.profile-image {
		position: relative;
		width: 300px;
		height: 300px;
		border-radius: 50%;
		overflow: hidden;
		border: 3px solid var(--accent-primary);
		box-shadow: 
			0 0 50px rgba(0, 245, 255, 0.3),
			inset 0 0 50px rgba(0, 245, 255, 0.1);
		animation: image-glow 4s infinite ease-in-out alternate;
	}

	@keyframes image-glow {
		0% { 
			box-shadow: 
				0 0 50px rgba(0, 245, 255, 0.3),
				inset 0 0 50px rgba(0, 245, 255, 0.1);
		}
		100% { 
			box-shadow: 
				0 0 80px rgba(255, 107, 157, 0.4),
				inset 0 0 80px rgba(255, 107, 157, 0.2);
		}
	}

	.profile-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.5s ease;
	}

	.profile-image:hover img {
		transform: scale(1.1) rotate(2deg);
		filter: brightness(1.1) contrast(1.1);
	}

	.cosmic-ring {
		position: absolute;
		top: -10px;
		left: -10px;
		right: -10px;
		bottom: -10px;
		border: 2px solid transparent;
		border-radius: 50%;
		background: linear-gradient(45deg, var(--accent-primary), var(--accent-secondary), var(--accent-primary)) border-box;
		mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
		mask-composite: xor;
		-webkit-mask-composite: xor;
		animation: rotate-ring 4s linear infinite, ring-pulse 2s ease-in-out infinite alternate;
	}

	@keyframes ring-pulse {
		0% { transform: rotate(0deg) scale(1); }
		100% { transform: rotate(0deg) scale(1.05); }
	}

	@keyframes rotate-ring {
		0% { transform: rotate(0deg); }
		100% { transform: rotate(360deg); }
	}

	.hero-text {
		flex: 1;
		animation: slide-in 1.5s ease-out 0.3s both, text-float 8s infinite ease-in-out 3s;
	}

	@keyframes text-float {
		0%, 100% { transform: translateY(0); }
		50% { transform: translateY(-5px); }
	}

	@keyframes slide-in {
		0% {
			opacity: 0;
			transform: translateX(50px);
		}
		100% {
			opacity: 1;
			transform: translateX(0);
		}
	}

	.cosmic-title {
		font-size: 3.5rem;
		font-weight: 900;
		margin-bottom: 10px;
		background: linear-gradient(45deg, var(--accent-primary), var(--accent-secondary), var(--accent-primary));
		background-size: 200% 200%;
		background-clip: text;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		animation: gradient-shift 3s ease-in-out infinite, title-glow 4s ease-in-out infinite alternate;
	}

	@keyframes title-glow {
		0% { filter: drop-shadow(0 0 10px rgba(0, 245, 255, 0.3)); }
		100% { filter: drop-shadow(0 0 25px rgba(255, 107, 157, 0.6)); }
	}

	.cosmic-subtitle {
		font-size: 2.5rem;
		font-weight: 700;
		margin-bottom: 30px;
		background: linear-gradient(45deg, var(--accent-primary), var(--accent-secondary), var(--accent-primary));
		background-size: 200% 200%;
		background-clip: text;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		animation: gradient-shift 3s ease-in-out infinite, subtitle-pulse 6s ease-in-out infinite;
	}

	@keyframes subtitle-pulse {
		0%, 100% { transform: scale(1); }
		50% { transform: scale(1.02); }
	}

	@keyframes gradient-shift {
		0%, 100% { background-position: 0% 50%; }
		50% { background-position: 100% 50%; }
	}

	.typing-text-name,
	.typing-text-welcome {
		display: inline-block;
		min-height: 1.2em;
	}

	.cursor {
		color: var(--accent-primary);
		animation: blink 1s infinite, cursor-glow 2s ease-in-out infinite alternate;
	}

	@keyframes blink {
		0%, 50% { opacity: 1; }
		51%, 100% { opacity: 0; }
	}

	@keyframes cursor-glow {
		0% { text-shadow: 0 0 5px var(--accent-primary); }
		100% { text-shadow: 0 0 15px var(--accent-primary), 0 0 25px var(--accent-secondary); }
	}

	.hero-subtitle {
		font-size: 1.4rem;
		color: var(--text-secondary);
		margin-bottom: 40px;
		line-height: 1.6;
		animation: fade-in-up 1s ease-out 0.8s both, subtitle-shimmer 8s ease-in-out infinite 4s;
	}

	@keyframes subtitle-shimmer {
		0%, 100% { opacity: 0.8; }
		50% { opacity: 1; text-shadow: 0 0 10px rgba(255, 255, 255, 0.3); }
	}

	.fade-in-up {
		animation: fade-in-up 1s ease-out 0.8s both;
	}

	@keyframes fade-in-up {
		0% {
			opacity: 0;
			transform: translateY(30px);
		}
		100% {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.cta-buttons {
		display: flex;
		gap: 20px;
	}

	.cosmic-button {
		padding: 15px 30px;
		border-radius: 50px;
		text-decoration: none;
		font-weight: 600;
		font-family: 'Orbitron', monospace;
		transition: all 0.3s ease;
		position: relative;
		overflow: hidden;
		backdrop-filter: blur(10px);
	}

	.cosmic-button.primary {
		background: linear-gradient(45deg, var(--accent-primary), #0080ff);
		color: var(--bg-primary);
		border: 2px solid transparent;
	}

	.cosmic-button.secondary {
		background: transparent;
		color: var(--text-primary);
		border: 2px solid var(--accent-primary);
	}

	.cosmic-button::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), rgba(0, 245, 255, 0.3), transparent);
		transition: left 0.5s ease;
	}

	.cosmic-button:hover::before {
		left: 100%;
	}

	.cosmic-button:hover {
		transform: translateY(-3px) scale(1.05);
		box-shadow: 0 15px 40px rgba(0, 245, 255, 0.5);
		animation: button-pulse 0.6s ease-in-out;
	}

	@keyframes button-pulse {
		0%, 100% { box-shadow: 0 15px 40px rgba(0, 245, 255, 0.5); }
		50% { box-shadow: 0 20px 50px rgba(255, 107, 157, 0.6); }
	}

	.scroll-indicator {
		position: absolute;
		bottom: 30px;
		left: 50%;
		transform: translateX(-50%);
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 10px;
		color: var(--text-secondary);
		font-size: 0.9rem;
		animation: bounce 2s infinite, indicator-glow 3s ease-in-out infinite alternate;
	}

	@keyframes indicator-glow {
		0% { opacity: 0.6; }
		100% { opacity: 1; text-shadow: 0 0 10px rgba(0, 245, 255, 0.5); }
	}

	.scroll-arrow {
		width: 2px;
		height: 30px;
		background: linear-gradient(to bottom, transparent, var(--accent-primary));
		position: relative;
	}

	.scroll-arrow::after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 50%;
		transform: translateX(-50%);
		width: 0;
		height: 0;
		border-left: 4px solid transparent;
		border-right: 4px solid transparent;
		border-top: 8px solid var(--accent-primary);
	}

	@keyframes bounce {
		0%, 100% { transform: translateX(-50%) translateY(0); }
		50% { transform: translateX(-50%) translateY(10px); }
	}

	@media (max-width: 768px) {
		.hero-content {
			flex-direction: column;
			text-align: center;
			gap: 30px;
			padding: 0 15px;
		}

		.hero-section {
			min-height: 100vh;
			padding: 100px 15px 80px;
		}

		.profile-image {
			width: 220px;
			height: 220px;
		}

		.cosmic-title {
			font-size: 2.2rem;
			line-height: 1.2;
		}

		.cosmic-subtitle {
			font-size: 1.6rem;
			line-height: 1.3;
		}

		.hero-subtitle {
			font-size: 1.1rem;
			padding: 0 10px;
		}

		.cta-buttons {
			flex-direction: column;
			align-items: center;
			gap: 15px;
			margin-bottom: 40px;
		}

		.cosmic-button {
			width: 100%;
			max-width: 250px;
			padding: 12px 25px;
			font-size: 0.9rem;
		}

		.scroll-indicator {
			bottom: 20px;
			font-size: 0.8rem;
			z-index: 10;
		}
		
		.scroll-arrow {
			height: 25px;
		}
	}

	@media (max-width: 480px) {
		.hero-section {
			min-height: 100vh;
			padding: 90px 10px 100px;
		}

		.hero-content {
			gap: 25px;
		}

		.profile-image {
			width: 180px;
			height: 180px;
		}

		.cosmic-title {
			font-size: 1.8rem;
		}

		.cosmic-subtitle {
			font-size: 1.3rem;
		}

		.hero-subtitle {
			font-size: 1rem;
		}

		.cta-buttons {
			margin-bottom: 60px;
		}
		.cosmic-button {
			padding: 10px 20px;
			font-size: 0.8rem;
		}
	}
		.scroll-indicator {
			bottom: 30px;
			z-index: 10;
		}
</style>
<script>
	document.addEventListener('DOMContentLoaded', function() {
		let currentLang = 'es';
		let nameTyping = false;
		let welcomeTyping = false;
		
		const nameTexts = {
			es: "Hola, soy Einer Chávez",
			en: "Hello, I'm Einer Chávez"
		};
		
		const welcomeTexts = {
			es: [
				"Bienvenido a mi universo digital",
				"Desarrollador Full Stack",
				"Creando experiencias increíbles",
				"Explorando nuevas tecnologías",
				"Construyendo el futuro"
			],
			en: [
				"Welcome to my digital universe",
				"Full Stack Developer",
				"Creating incredible experiences",
				"Exploring new technologies",
				"Building the future"
			]
		};
		
		let welcomeIndex = 0;
		
		// Función para escribir texto
		function typeText(element, text, speed = 100) {
			return new Promise((resolve) => {
				let i = 0;
				element.textContent = '';
				const timer = setInterval(() => {
					if (i < text.length) {
						element.textContent += text.charAt(i);
						i++;
					} else {
						clearInterval(timer);
						resolve();
					}
				}, speed);
			});
		}
		
		// Función para borrar texto
		function eraseText(element, speed = 50) {
			return new Promise((resolve) => {
				const text = element.textContent;
				let i = text.length;
				const timer = setInterval(() => {
					if (i > 0) {
						element.textContent = text.substring(0, i - 1);
						i--;
					} else {
						clearInterval(timer);
						resolve();
					}
				}, speed);
			});
		}
		
		// Animación continua del nombre
		async function animateName() {
			if (nameTyping) return;
			nameTyping = true;
			
			const nameElement = document.querySelector('.typing-text-name');
			if (!nameElement) return;
			
			while (true) {
				// Escribir nombre
				await typeText(nameElement, nameTexts[currentLang], 120);
				await new Promise(resolve => setTimeout(resolve, 2000)); // Pausa 2 segundos
				
				// Borrar nombre
				await eraseText(nameElement, 80);
				await new Promise(resolve => setTimeout(resolve, 500)); // Pausa breve
			}
		}
		
		// Animación rotativa de bienvenida
		async function animateWelcome() {
			if (welcomeTyping) return;
			welcomeTyping = true;
			
			const welcomeElement = document.querySelector('.typing-text-welcome');
			if (!welcomeElement) return;
			
			// Esperar un poco antes de empezar
			await new Promise(resolve => setTimeout(resolve, 1000));
			
			while (true) {
				const currentTexts = welcomeTexts[currentLang];
				const text = currentTexts[welcomeIndex];
				
				// Escribir texto
				await typeText(welcomeElement, text, 80);
				await new Promise(resolve => setTimeout(resolve, 3000)); // Mostrar 3 segundos
				
				// Borrar texto
				await eraseText(welcomeElement, 60);
				await new Promise(resolve => setTimeout(resolve, 500)); // Pausa breve
				
				// Siguiente texto
				welcomeIndex = (welcomeIndex + 1) % currentTexts.length;
			}
		}
		
		// Función para actualizar idioma
		window.updateTypingLanguage = function(newLang) {
			currentLang = newLang;
			welcomeIndex = 0; // Reiniciar índice al cambiar idioma
		};
		
		// Iniciar animaciones
		setTimeout(() => {
			animateName();
			animateWelcome();
		}, 500);
	});
</script>